.container
  width 100%
  display flex
  flex-wrap wrap
  justify-content space-between
  align-content space-between

  .number-card
    background-color pink
    display flex
    flex-wrap wrap

    .card-label
      width calc(45% - 10px)
      height calc(100% - 10px)
      text-align left
      margin-left 10px
      display flex
      align-items center
      justify-content flex-start

    .card-value
      width calc(55% - 10px)
      height calc(100% - 10px)
      text-align right
      margin-right 10px
      display flex
      align-items center
      justify-content flex-end

      .number
        font-size 200%
        font-weight 500

      .prefix
      .suffix
        position relative
        top 7.5px

    .card-footer
      width 100%
      height 10px
      background-color hotpink
